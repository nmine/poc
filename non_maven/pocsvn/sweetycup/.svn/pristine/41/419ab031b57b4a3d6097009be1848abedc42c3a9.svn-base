#applications-list {
	list-style: none
}
	#applications-list li.application-overview {
		min-height: 20px;
		padding: 0 19px 19px 19px;
		margin-bottom: 20px;
		background-color: whiteSmoke;
		border: 1px solid #E3E3E3;
		-webkit-border-radius: 4px;
		-moz-border-radius: 4px;
		border-radius: 4px;
		-webkit-box-shadow: inset 0 1px 1px rgba(0, 0, 0, 0.05);
		-moz-box-shadow: inset 0 1px 1px rgba(0, 0, 0, 0.05);
		box-shadow: inset 0 1px 1px rgba(0, 0, 0, 0.05);
	}
	
div#project-edition {}

	div#project-edition .span4 {
		-webkit-box-shadow: inset 2px 0 0 rgba(0, 0, 0, 0.05);
		-moz-box-shadow: inset 2px 0 0 rgba(0, 0, 0, 0.05);
		box-shadow: inset 2px 0 0 rgba(0, 0, 0, 0.05);
		margin-left: 3px;
		padding-left: 9px;
	}
		div#project-edition .span4 .input-append {
			
		}
		
		div#project-edition .new-translation {
			width: 100%;
		}
		    div#project-edition .new-translation form.form-horizontal label.control-label {
		        width: 40px;
		    }
		    div#project-edition .new-translation form.form-horizontal .controls {
                margin-left: 45px;  
                width: 100%;
            }
	
	table.application {}
		table.application thead tr th {
			height: 30px;
			line-height: 30px;
		}	
		table.application thead td .input-append input {
            margin-right: 0;
        }
        table.application thead td .input-append button {
            margin-left: 0;
        }
		
		table.application tbody {
			overflow: auto;
			border: 1px solid transparent; /* To avoid flicking for drag and drop */
		}
		table.application tbody.ui-state-active {
			border: 1px solid yellow;
			background-color: lightyellow;
		}
		
	
		
	.ui-draggable { cursor: move }
	
	div#project-edition .ui-french, div#project-edition .ui-fr {
	   background: transparent url('../images/fr.png') no-repeat 2px 50%;
	   padding-left: 22px;
	}
	div#project-edition .ui-dutch, div#project-edition .ui-nl {
	   background: transparent url('../images/nl.png') no-repeat 2px 50%;
       padding-left: 22px;
	}